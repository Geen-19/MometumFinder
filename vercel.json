{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.py" }
  ],
  "functions": {
    "api/index.py": {
      "runtime": "@vercel/python",
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/update",
      "schedule": "30 10 * * 1-5"
    }
  ]
}
